            </intent-filter>
        </activity>
        <activity
            android:name=".activityToFragment.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".fragmentToActivity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".withinViewPager.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".child_fragments.ParentActivity"
            android:screenOrientation="portrait" />
        <activity
